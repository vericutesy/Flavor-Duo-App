<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activity.MainActivity2">

    <!-- Top Banner -->
    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/layout"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="110dp"
            android:layout_height="101dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/logodark" />

        <!-- Greeting Texts INSIDE Banner -->
        <TextView
            android:id="@+id/greetingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/afacad"
            android:text="Hello User, Choose Your"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:paddingStart="95dp"
            android:paddingTop="10dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/greetingText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/afacad_bold"
            android:text="Best Duo"
            android:textColor="@android:color/white"
            android:textSize="50sp"
            android:paddingStart="100dp"
            android:translationY="-15dp"/>

    </LinearLayout>

    <!-- Cart Icon (Top Right) -->
    <ImageView
        android:id="@+id/cartIcon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="62dp"
        android:contentDescription="Cart"
        app:srcCompat="@drawable/cart"
        app:layout_constraintTop_toTopOf="@+id/layout"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Profile Icon (Top Right) -->
    <ImageView
        android:id="@+id/profileIcon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_margin="16dp"
        android:contentDescription="Profile"
        app:srcCompat="@drawable/profile"
        app:layout_constraintTop_toTopOf="@+id/layout"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Scrollable Content placed BELOW the banner -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="412dp"
        android:layout_height="522dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Categories1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:paddingStart="32dp"
                android:paddingTop="10dp"
                android:text="Category"
                android:textColor="@color/darkPink"
                android:textSize="18dp"
                android:textStyle="bold" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/categoryRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingStart="32dp"
                    android:paddingTop="12dp"
                    android:paddingEnd="32dp"
                    android:paddingBottom="12dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteY="7dp">

                    <!-- Cupcakes small pill -->
                    <LinearLayout
                        android:id="@+id/cupcakeCategory"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/categories"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp">

                        <TextView
                            android:id="@+id/textCupcakes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cupcakes"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Drinks small pill -->
                    <LinearLayout
                        android:id="@+id/drinksCategory"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginStart="12dp"
                        android:background="@drawable/categories"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp">

                        <TextView
                            android:id="@+id/textDrinks"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Drinks"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- small centered categories row (place this under your TextView with id=Categories1) -->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/flavorduocombo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="32dp"
                    android:text="@string/flavor_duo_combo"
                    android:textColor="@color/darkPink"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- ✅ FIXED SECTION -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/comboRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:clipToPadding="false"
                    android:paddingStart="32dp"
                    android:paddingEnd="32dp"
                    tools:listitem="@layout/comboproducts" />


            </androidx.constraintlayout.widget.ConstraintLayout>
            <!-- ✅ END FIXED SECTION -->

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
